# /etc/nginx/sites-available/moosematrix (VPS path; copy from this example)
server {
  listen 80;
  server_name moosematrix.com www.moosematrix.com;
  location /.well-known/acme-challenge/ { root /var/www/html; }
  return 301 https://moosematrix.com$request_uri;
}

server {
  listen 443 ssl http2;
  server_name moosematrix.com www.moosematrix.com;

  # SSL certs (Certbot will install real paths)
  ssl_certificate /etc/letsencrypt/live/moosematrix.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/moosematrix.com/privkey.pem;

  # Security & performance basics
  add_header X-Frame-Options SAMEORIGIN;
  add_header X-Content-Type-Options nosniff;
  add_header Referrer-Policy strict-origin-when-cross-origin;
  add_header Permissions-Policy "geolocation=(), microphone=()";

  # Gzip basic
  gzip on;
  gzip_types text/plain text/css application/json application/javascript application/font-woff image/svg+xml;

  location / {
    proxy_pass http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

  # Cache immutable Next assets (optional)
  location ~* ^/_next/static/ {
    proxy_pass http://127.0.0.1:3000;
    add_header Cache-Control "public, max-age=31536000, immutable";
  }
}
